-- Loading Screen Script (LocalScript in StarterPlayerScripts)

local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- Create ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.IgnoreGuiInset = true
screenGui.ResetOnSpawn = false
screenGui.Parent = player:WaitForChild("PlayerGui")

-- Background blur
local blur = Instance.new("BlurEffect")
blur.Size = 20
blur.Parent = game.Lighting

-- Create center box
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 300, 0, 180)
frame.Position = UDim2.new(0.5, -150, 0.5, -90)
frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
frame.BorderSizePixel = 0
frame.Parent = screenGui

local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 18)
corner.Parent = frame

-- LOGO (static decal)
local logo = Instance.new("ImageLabel")
logo.Size = UDim2.new(0, 60, 0, 60)
logo.Position = UDim2.new(0.5, -30, 0, 10)
logo.BackgroundTransparency = 1
logo.Image = "rbxassetid://77940526891025" -- use your decal directly
logo.Parent = frame

-- MAIN TEXT
local label = Instance.new("TextLabel")
label.Size = UDim2.new(1, -20, 0, 40)
label.Position = UDim2.new(0.5, -140, 0, 85)
label.BackgroundTransparency = 1
label.Text = "Wait your script to load"
label.Font = Enum.Font.GothamBold
label.TextColor3 = Color3.fromRGB(170, 0, 255)
label.TextScaled = false
label.TextSize = 20
label.TextXAlignment = Enum.TextXAlignment.Center
label.Parent = frame

-- Animated dots
local dots = Instance.new("TextLabel")
dots.Size = UDim2.new(1, -20, 0, 40)
dots.Position = UDim2.new(0.5, -140, 0, 120)
dots.BackgroundTransparency = 1
dots.Text = ""
dots.Font = Enum.Font.GothamBlack
dots.TextColor3 = Color3.fromRGB(170, 0, 255)
dots.TextScaled = false
dots.TextSize = 28
dots.TextXAlignment = Enum.TextXAlignment.Center
dots.Parent = frame

task.spawn(function()
    local list = {".", "..", "..."}
    local i = 1
    while screenGui.Parent do
        dots.Text = list[i]
        i += 1
        if i > #list then i = 1 end
        wait(0.4)
    end
end)

-- Fade out
local function fadeOut()
    for t = 0, 1, 0.03 do
        frame.BackgroundTransparency = t
        label.TextTransparency = t
        dots.TextTransparency = t
        logo.ImageTransparency = t
        blur.Size = 20 - (t * 20)
        wait(0.03)
    end
    blur:Destroy()
    screenGui:Destroy()
end

-- Wait 10 minutes then fade out
task.delay(600, fadeOut)
