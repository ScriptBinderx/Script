-- Loading Screen Script (LocalScript in StarterPlayerScripts)

-- Create ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.IgnoreGuiInset = true
screenGui.ResetOnSpawn = false
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Background blur
local blur = Instance.new("BlurEffect")
blur.Size = 20
blur.Parent = game.Lighting

-- Create center box
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 300, 0, 180)
frame.Position = UDim2.new(0.5, -150, 0.5, -90)
frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0) -- black box
frame.BorderSizePixel = 0
frame.Parent = screenGui

local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 18)
corner.Parent = frame

-- === ANIMATED LOGO ===
local logoFrame = Instance.new("Frame")
logoFrame.Size = UDim2.new(0, 60, 0, 60)
logoFrame.Position = UDim2.new(0.5, -30, 0, 10)
logoFrame.BackgroundColor3 = Color3.fromRGB(170, 0, 255)
logoFrame.BorderSizePixel = 0
logoFrame.Parent = frame

local logoCorner = Instance.new("UICorner")
logoCorner.CornerRadius = UDim.new(0, 30)
logoCorner.Parent = logoFrame

-- Animate logo (pulse + rotate + color change)
task.spawn(function()
    local colors = {
        Color3.fromRGB(170, 0, 255),
        Color3.fromRGB(255, 0, 170),
        Color3.fromRGB(0, 170, 255),
        Color3.fromRGB(255, 170, 0)
    }
    local colorIndex = 1
    local scaleDirection = 1
    local rotation = 0

    while screenGui.Parent do
        -- Color change
        logoFrame.BackgroundColor3 = colors[colorIndex]
        colorIndex += 1
        if colorIndex > #colors then colorIndex = 1 end

        -- Pulse effect
        local size = logoFrame.Size
        local newSize = UDim2.new(0, 60 + (5 * scaleDirection), 0, 60 + (5 * scaleDirection))
        logoFrame.Size = newSize
        scaleDirection *= -1

        -- Rotate frame
        rotation += 15
        logoFrame.Rotation = rotation

        wait(0.2)
    end
end)

-- MAIN TEXT (centered)
local label = Instance.new("TextLabel")
label.Size = UDim2.new(1, -20, 0, 40)
label.Position = UDim2.new(0.5, -140, 0, 85)
label.BackgroundTransparency = 1
label.Text = "Wait for your script to load"
label.Font = Enum.Font.GothamBold
label.TextColor3 = Color3.fromRGB(170, 0, 255) -- neon purple
label.TextScaled = false
label.TextSize = 20
label.TextXAlignment = Enum.TextXAlignment.Center
label.Parent = frame

-- Animated 3D loading dots (centered)
local dots = Instance.new("TextLabel")
dots.Size = UDim2.new(1, -20, 0, 40)
dots.Position = UDim2.new(0.5, -140, 0, 120)
dots.BackgroundTransparency = 1
dots.Text = ""
dots.Font = Enum.Font.GothamBlack
dots.TextColor3 = Color3.fromRGB(170, 0, 255)
dots.TextScaled = false
dots.TextSize = 28
dots.TextXAlignment = Enum.TextXAlignment.Center
dots.Parent = frame

-- Animated dots
task.spawn(function()
    local list = {".", "..", "..."}
    local i = 1
    while screenGui.Parent do
        dots.Text = list[i]
        i += 1
        if i > #list then i = 1 end
        wait(0.4)
    end
end)

-- Fade out function
local function fadeOut()
    for t = 0, 1, 0.03 do
        frame.BackgroundTransparency = t
        label.TextTransparency = t
        dots.TextTransparency = t
        logoFrame.BackgroundTransparency = t
        blur.Size = 20 - (t * 20)
        wait(0.03)
    end
    blur:Destroy()
    screenGui:Destroy()
end

-- Wait 10 minutes
wait(600)
fadeOut()
