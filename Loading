-- Loading Screen Script (LocalScript in StarterPlayerScripts)

local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- Create ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.IgnoreGuiInset = true
screenGui.ResetOnSpawn = false
screenGui.Parent = player:WaitForChild("PlayerGui")

-- Background blur
local blur = Instance.new("BlurEffect")
blur.Size = 20
blur.Parent = game.Lighting

-- Create smaller center box
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 200, 0, 120) -- smaller box
frame.Position = UDim2.new(0.5, -100, 0.5, -60)
frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
frame.BorderSizePixel = 0
frame.Parent = screenGui

local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 18)
corner.Parent = frame

-- LOGO
local logo = Instance.new("ImageLabel")
logo.Size = UDim2.new(0, 50, 0, 50) -- slightly smaller logo
logo.Position = UDim2.new(0.5, -25, 0, 5)
logo.BackgroundTransparency = 1
logo.Image = "rbxassetid://6023426910" -- working decal
logo.Parent = frame

-- MAIN TEXT
local label = Instance.new("TextLabel")
label.Size = UDim2.new(1, -20, 0, 30)
label.Position = UDim2.new(0.5, -90, 0, 65)
label.BackgroundTransparency = 1
label.Text = "Wait for your script to load"
label.Font = Enum.Font.GothamBold
label.TextColor3 = Color3.fromRGB(170, 0, 255)
label.TextScaled = false
label.TextSize = 16
label.TextXAlignment = Enum.TextXAlignment.Center
label.Parent = frame

-- Animated dots
local dots = Instance.new("TextLabel")
dots.Size = UDim2.new(1, -20, 0, 30)
dots.Position = UDim2.new(0.5, -90, 0, 95)
dots.BackgroundTransparency = 1
dots.Text = ""
dots.Font = Enum.Font.GothamBlack
dots.TextColor3 = Color3.fromRGB(170, 0, 255)
dots.TextScaled = false
dots.TextSize = 20
dots.TextXAlignment = Enum.TextXAlignment.Center
dots.Parent = frame

task.spawn(function()
    local list = {".", "..", "..."}
    local i = 1
    while screenGui.Parent do
        dots.Text = list[i]
        i += 1
        if i > #list then i = 1 end
        wait(0.4)
    end
end)

-- Fade out
local function fadeOut()
    for t = 0, 1, 0.03 do
        frame.BackgroundTransparency = t
        label.TextTransparency = t
        dots.TextTransparency = t
        logo.ImageTransparency = t
        blur.Size = 20 - (t * 20)
        wait(0.03)
    end
    blur:Destroy()
    screenGui:Destroy()
end

-- Wait 10 minutes then fade out
task.delay(600, fadeOut)
