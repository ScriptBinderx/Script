-- Loading Screen Script (LocalScript in StarterPlayerScripts)

-- Create ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.IgnoreGuiInset = true
screenGui.ResetOnSpawn = false
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Background blur
local blur = Instance.new("BlurEffect")
blur.Size = 20
blur.Parent = game.Lighting

-- Create center box
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 280, 0, 140)
frame.Position = UDim2.new(0.5, -140, 0.5, -70)
frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0) -- black box
frame.BorderSizePixel = 0
frame.Parent = screenGui

local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 18)
corner.Parent = frame

-- MAIN TEXT (smaller)
local label = Instance.new("TextLabel")
label.Size = UDim2.new(1, -20, 0, 40)
label.Position = UDim2.new(0, 10, 0, 20)
label.BackgroundTransparency = 1
label.Text = "Wait your script to load"
label.Font = Enum.Font.GothamBold
label.TextColor3 = Color3.fromRGB(170, 0, 255) -- neon purple
label.TextScaled = false
label.TextSize = 20  -- SMALL TEXT
label.Parent = frame

-- Animated 3D loading dots (small)
local dots = Instance.new("TextLabel")
dots.Size = UDim2.new(1, -20, 0, 40)
dots.Position = UDim2.new(0, 10, 0, 70)
dots.BackgroundTransparency = 1
dots.Text = ""
dots.Font = Enum.Font.GothamBlack
dots.TextColor3 = Color3.fromRGB(170, 0, 255)
dots.TextScaled = false
dots.TextSize = 28  -- Slightly larger than main text
dots.Parent = frame

-- Animated dots
task.spawn(function()
	local list = {".", "..", "..."}
	local i = 1
	while screenGui.Parent do
		dots.Text = list[i]
		i += 1
		if i > #list then i = 1 end
		wait(0.4)
	end
end)

-- Fade out
local function fadeOut()
	for t = 0, 1, 0.03 do
		frame.BackgroundTransparency = t
		label.TextTransparency = t
		dots.TextTransparency = t
		blur.Size = 20 - (t * 20)
		wait(0.03)
	end
	blur:Destroy()
	screenGui:Destroy()
end

-- WAIT 10 MINUTES
wait(600)

fadeOut()
